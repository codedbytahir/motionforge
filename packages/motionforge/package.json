{
  "name": "motionforge",
  "version": "1.3.0",
  "description": "A React-based framework for creating videos programmatically. Build stunning videos with React components, spring animations, and frame-perfect control.",
  "author": "MotionForge Team",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./icons": {
      "types": "./dist/icons/index.d.ts",
      "import": "./dist/icons/index.js",
      "require": "./dist/icons/index.cjs"
    },
    "./player": {
      "types": "./dist/player/Player.d.ts",
      "import": "./dist/player/Player.js"
    },
    "./renderer": {
      "types": "./dist/renderer/index.d.ts",
      "import": "./dist/renderer/index.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "react",
    "video",
    "animation",
    "motion",
    "remotion",
    "video-editing",
    "programmatic-video",
    "canvas",
    "frame-by-frame",
    "spring-animation",
    "motion-graphics",
    "video-generation",
    "react-video",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codedbytahir/motionforge.git",
    "directory": "packages/motionforge"
  },
  "bugs": {
    "url": "https://github.com/codedbytahir/motionforge/issues"
  },
  "homepage": "https://motionforge.dev",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "dependencies": {
    "lottie-web": "^5.13.0"
  }
}
